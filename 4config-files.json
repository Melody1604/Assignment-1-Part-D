    "numpy==1.24.3",
    "scikit-learn==1.3.0",
    "xgboost==1.7.6",
    "joblib==1.3.2",
    "",
    "# Interactive Brokers",
    "ib-insync==0.9.86",
    "",
    "# Data Processing",
    "openpyxl==3.1.2",
    "xlrd==2.0.1",
    "",
    "# Market Data",
    "yfinance==0.2.28",
    "alpha-vantage==2.3.1",
    "",
    "# Visualization",
    "matplotlib==3.7.2",
    "seaborn==0.12.2",
    "plotly==5.15.0",
    "",
    "# Database",
    "psycopg2-binary==2.9.7",
    "sqlalchemy==2.0.19",
    "",
    "# Streaming",
    "kafka-python==2.0.2",
    "apache-kafka==2.0.2",
    "",
    "# Async Processing",
    "asyncio==3.4.3",
