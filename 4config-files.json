{
  "config.json": {
    "description": "Main configuration file for automated trading system",
    "ib": {
      "host": "127.0.0.1",
      "port": 7497,
      "client_id": 1,
      "account": "DU123456",
      "gateway": "TWS",
      "connection_timeout": 30
    },
    "risk": {
      "max_position_size": 50000,
      "max_daily_loss": 1000,
      "max_concentration": 0.3,
      "position_sizing_method": "volatility_adjusted",
      "stop_loss_percentage": 0.02,
      "take_profit_percentage": 0.04,
      "max_leverage": 1.0,
      "risk_per_trade": 0.02
    },
    "strategies": {
      "msty_volatility": {
        "enabled": true,
        "volatility_threshold": 1.5,
        "volume_multiplier": 1.2,
        "win_rate": 0.67,
        "position_size": 100
      },
      "tlt_macro": {
        "enabled": true,
        "event_window_hours": 2,
        "win_rate": 0.45,
        "position_size": 50
      },
      "tech_pattern": {
        "enabled": false,
        "gap_threshold": 0.015,
        "win_rate": 0.38,
        "position_size": 100,
        "symbols": ["AAPL", "GOOGL", "MSFT", "NVDA", "META"]
      },
      "forex_hedge": {
        "enabled": true,
        "hedge_threshold": 0.02,
        "win_rate": 0.71,
        "position_size": 200
      }
    },
    "watchlist": [
      "AAPL", "GOOGL", "MSFT", "NVDA", "META",
      "AMZN", "TSLA", "JPM", "V", "MA",
      "SPY", "QQQ", "TLT", "GLD", "FXA"
    ],
    "timezone": {
      "local": "Australia/Sydney",
      "market": "America/New_York",
      "utc_offset_hours": 16
    },
    "alerts": {
      "email_enabled": true,
      "email_address": "trader@example.com",
      "sms_enabled": false,
      "sms_number": "+61400000000",
      "daily_summary_time": "22:00",
      "critical_alerts": true,
      "position_alerts": true
    },
    "system": {
      "loop_interval": 30,
      "data_refresh_interval": 5,
      "close_on_stop": false,
      "paper_trading": true,
      "log_level": "INFO",
      "max_retries": 3,
      "retry_delay": 60
    },
    "database": {
      "type": "postgresql",
      "host": "localhost",
      "port": 5432,
      "database": "trading_db",
      "user": "trader",
      "password": "secure_password"
    },
    "kafka": {
      "bootstrap_servers": "localhost:9092",
      "topic_market_data": "market-data",
      "topic_signals": "trading-signals",
      "topic_executions": "trade-executions",
      "consumer_group": "trading-system"
    },
    "ml_models": {
      "xgboost_path": "models/xgboost_model.pkl",
      "scaler_path": "models/feature_scaler.pkl",
      "update_frequency": "daily",
      "retrain_period_days": 30
    },
    "backtesting": {
      "initial_capital": 100000,
      "commission_per_share": 0.005,
      "min_commission": 1.0,
      "slippage_bps": 5,
      "market_impact_factor": 0.0001,
      "walk_forward_window": 100,
      "walk_forward_step": 20
    }
  },
  
